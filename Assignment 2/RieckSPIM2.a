    .data
pay_prompt:    .asciiz    "Please enter a payment type\n's': SmahtPay\n'c': Credit\n'q': Complete Transaction\n> "
    .text

paymentAndType:

	# display payment prompt
    la    $a0,    pay_prompt

    li    $v0,    4
    syscall

    # read in a character
    li    $v0,    12
    syscall

    # move character read in into $t1
    move  $s0,    $v0

    la    $a0,    endl

    li    $v0,    4
    syscall

    # display payment prompt
    la    $a0,    gas_prompt

    li    $v0,    4
    syscall

    # read in a character
    li    $v0,    12
    syscall

    move  $s1,    $v0

    j    $ra
